
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /panchayat-settings/{docId} {
        allow get: if isSignedIn();
        allow write: if isSignedIn(); // In a real app, you'd restrict this to an admin role
    }

    // This rule was the source of the "Missing or insufficient permissions" error.
    // By allowing `list` for any signed-in user, the dashboard can now fetch all properties.
    match /properties/{propertyId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isSignedIn(); // In a real app, restrict to admins/owners
    }
  }
}
