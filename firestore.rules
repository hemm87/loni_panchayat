
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can create their own user profile
      // A user can only read or update their own profile
      allow read, update: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated();
    }

    // Rules for the 'properties' collection
    match /properties/{propertyId} {
      // Allow authenticated users to list properties
      allow list: if isAuthenticated();
      // Allow authenticated users to read, create, update, and delete properties
      allow read, write: if isAuthenticated();
    }
    
    // Rules for Panchayat settings
    match /panchayat-settings/config {
      // Any authenticated user can read the settings
      allow get: if isAuthenticated();
      // Only authenticated users can write (for now, can be restricted to admin later)
      allow write: if isAuthenticated();
    }
  }
}
