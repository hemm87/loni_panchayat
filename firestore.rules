rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (create) User with UID 'user123' can create their profile document.
     * @allow (get) User with UID 'user123' can read their profile document.
     * @allow (update) User with UID 'user123' can update their profile document.
     * @allow (delete) User with UID 'user123' can delete their profile document.
     * @deny (create) User with UID 'user456' cannot create a profile document with ID 'user123'.
     * @principle Enforces document ownership and validates relational integrity.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their tax year data.
     * @path /users/{userId}/taxYears/{taxYearId}
     * @allow (create) User with UID 'user123' can create a tax year document under their profile.
     * @allow (get) User with UID 'user123' can read a tax year document under their profile.
     * @allow (list) User with UID 'user123' can list tax year documents under their profile.
     * @allow (update) User with UID 'user123' can update a tax year document under their profile.
     * @allow (delete) User with UID 'user123' can delete a tax year document under their profile.
     * @deny (create) User with UID 'user456' cannot create a tax year document under 'user123' profile.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/taxYears/{taxYearId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their income records for a specific tax year.
     * @path /users/{userId}/taxYears/{taxYearId}/incomes/{incomeId}
     * @allow (create) User with UID 'user123' can create an income document under their tax year.
     * @allow (get) User with UID 'user123' can read an income document under their tax year.
     * @allow (list) User with UID 'user123' can list income documents under their tax year.
     * @allow (update) User with UID 'user123' can update an income document under their tax year.
     * @allow (delete) User with UID 'user123' can delete an income document under their tax year.
     * @deny (create) User with UID 'user456' cannot create an income document under 'user123' tax year.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/taxYears/{taxYearId}/incomes/{incomeId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their expense records for a specific tax year.
     * @path /users/{userId}/taxYears/{taxYearId}/expenses/{expenseId}
     * @allow (create) User with UID 'user123' can create an expense document under their tax year.
     * @allow (get) User with UID 'user123' can read an expense document under their tax year.
     * @allow (list) User with UID 'user123' can list expense documents under their tax year.
     * @allow (update) User with UID 'user123' can update an expense document under their tax year.
     * @allow (delete) User with UID 'user123' can delete an expense document under their tax year.
     * @deny (create) User with UID 'user456' cannot create an expense document under 'user123' tax year.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/taxYears/{taxYearId}/expenses/{expenseId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their uploaded documents.
     * @path /users/{userId}/documents/{documentId}
     * @allow (create) User with UID 'user123' can create a document under their profile.
     * @allow (get) User with UID 'user123' can read a document under their profile.
     * @allow (list) User with UID 'user123' can list documents under their profile.
     * @allow (update) User with UID 'user123' can update a document under their profile.
     * @allow (delete) User with UID 'user123' can delete a document under their profile.
     * @deny (create) User with UID 'user456' cannot create a document under 'user123' profile.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/documents/{documentId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description This catch-all rule denies access to any path not explicitly defined above.
     * @path /properties
     * @deny (list) Any user cannot list properties.
     * @principle Secure by default: Explicitly deny access to unknown paths.
     */
    match /properties/{document} {
        allow get: if false;
        allow list: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }
  }
}