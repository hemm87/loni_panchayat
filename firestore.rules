
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Function to get the user's role from their document in the /users collection
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Function to check if user is super admin
    function isSuperAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'super-admin';
    }

    // Function to check if the user is an admin, super-admin, or operator
    function isAdminOrOperator() {
      return isSignedIn() && (
        getUserRole(request.auth.uid) == 'admin' || 
        getUserRole(request.auth.uid) == 'operator' ||
        getUserRole(request.auth.uid) == 'super-admin'
      );
    }
    
    function isAdmin() {
      return isSignedIn() && (
        getUserRole(request.auth.uid) == 'admin' ||
        getUserRole(request.auth.uid) == 'super-admin'
      );
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Users can update their own profile (limited fields)
      allow update: if isSignedIn() && request.auth.uid == userId;
      // Super admin can read, write, delete any user
      allow read, write, delete: if isSuperAdmin();
      // Admins can read user profiles
      allow read: if isAdmin();
    }

    match /panchayat-settings/{docId} {
        allow get: if isSignedIn();
        // Only super admin can write to settings
        allow write: if isSuperAdmin();
    }

    match /properties/{propertyId} {
      // Any signed-in user can view/list properties.
      allow get, list: if isSignedIn();
      // Only admins or operators can create, update, or delete properties
      allow create, update, delete: if isAdminOrOperator();
    }

    match /bills/{billId} {
      // Admins can do anything.
      allow read, write, list: if isAdmin();

      // A user can read a bill if their propertyId is on the bill.
      // This requires the propertyId to be stored on the bill document.
      allow get: if isSignedIn() && resource.data.propertyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.propertyIds;
    }

    match /auditLogs/{logId} {
      // Only admins can read or write audit logs.
      allow read, write: if isAdmin();
    }
  }
}
