{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "enum": ["Admin", "Data Entry", "Tax Collector", "Viewer"],
          "description": "The user's role in the system."
        },
        "lastLogin": {
          "type": "string",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["uid", "email", "role", "createdAt"]
    },
    "taxRecord": {
      "title": "Tax Record",
      "description": "A record of a tax assessment for a property.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "taxType": { "enum": ["Property Tax", "Water Tax", "Sanitation Tax", "Lighting Tax", "Land Tax", "Business Tax", "Other"] },
        "hindiName": { "type": "string" },
        "assessedAmount": { "type": "number" },
        "paymentStatus": { "enum": ["Paid", "Unpaid", "Partial"] },
        "amountPaid": { "type": "number" },
        "paymentDate": { "type": "string", "format": "date" },
        "receiptNumber": { "type": "string" },
        "assessmentYear": { "type": "number" }
      },
      "required": ["id", "taxType", "assessedAmount", "paymentStatus", "amountPaid", "assessmentYear"]
    },
    "property": {
      "title": "Property",
      "description": "A property in the system, which can be residential, commercial, or agricultural.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "ownerName": { "type": "string" },
        "fatherName": { "type": "string" },
        "mobileNumber": { "type": "string" },
        "houseNo": { "type": "string" },
        "address": { "type": "string" },
        "aadhaarHash": { "type": "string" },
        "propertyType": { "enum": ["Residential", "Commercial", "Agricultural"] },
        "area": { "type": "number" },
        "photoUrl": { "type": "string", "format": "uri" },
        "photoHint": { "type": "string" },
        "documents": {
          "type": "array",
          "items": { "type": "string", "format": "uri" }
        },
        "taxes": {
          "type": "array",
          "items": { "$ref": "#/entities/taxRecord" }
        }
      },
      "required": ["id", "ownerName", "fatherName", "address", "propertyType", "area"]
    }
  },
  "auth": {
    "providers": ["google.com", "password", "phone"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/properties/{propertyId}": {
      "schema": {
        "$ref": "#/entities/property"
      },
      "description": "Stores property records."
    }
  }
}
