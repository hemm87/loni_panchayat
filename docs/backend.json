
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the tax management system.",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "User's display name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "address": {
          "type": "string",
          "description": "User's mailing address."
        },
        "taxID": {
          "type": "string",
          "description": "User's tax identification number."
        },
        "filingStatus": {
          "type": "string",
          "description": "User's tax filing status (e.g., Single, Married Filing Jointly)."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the user was created."
        }
      },
      "required": [
        "displayName",
        "createdAt"
      ]
    },
    "TaxYear": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TaxYear",
      "type": "object",
      "description": "Represents a specific tax year for a user.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Reference to the User this tax year belongs to."
        },
        "year": {
          "type": "number",
          "description": "The calendar year for the tax period."
        },
        "notes": {
          "type": "string",
          "description": "General notes for the tax year."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the tax year was created."
        }
      },
      "required": [
        "userId",
        "year",
        "createdAt"
      ]
    },
    "Income": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Income",
      "type": "object",
      "description": "Represents a single income entry.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Reference to the User who received the income."
        },
        "taxYearId": {
          "type": "string",
          "description": "Reference to the TaxYear this income belongs to."
        },
        "amount": {
          "type": "number",
          "description": "The amount of income received."
        },
        "dateReceived": {
          "type": "string",
          "format": "date",
          "description": "The date the income was received."
        },
        "description": {
          "type": "string",
          "description": "Description of the income."
        },
        "incomeType": {
          "type": "string",
          "description": "The type of income (e.g., Salary, Freelance)."
        },
        "source": {
          "type": "string",
          "description": "The source of the income (e.g., Employer name)."
        },
        "isTaxable": {
          "type": "boolean",
          "description": "Whether the income is taxable."
        }
      },
      "required": [
        "userId",
        "taxYearId",
        "amount",
        "dateReceived",
        "description",
        "incomeType"
      ]
    },
    "Expense": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Expense",
      "type": "object",
      "description": "Represents a single expense entry.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Reference to the User who incurred the expense."
        },
        "taxYearId": {
          "type": "string",
          "description": "Reference to the TaxYear this expense belongs to."
        },
        "amount": {
          "type": "number",
          "description": "The amount of the expense."
        },
        "dateIncurred": {
          "type": "string",
          "format": "date",
          "description": "The date the expense was incurred."
        },
        "description": {
          "type": "string",
          "description": "Description of the expense."
        },
        "expenseCategory": {
          "type": "string",
          "description": "The category of the expense (e.g., Office Supplies, Travel)."
        },
        "vendor": {
          "type": "string",
          "description": "The vendor or person paid."
        },
        "isDeductible": {
          "type": "boolean",
          "description": "Whether the expense is tax-deductible."
        }
      },
      "required": [
        "userId",
        "taxYearId",
        "amount",
        "dateIncurred",
        "description",
        "expenseCategory"
      ]
    },
    "Document": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Document",
      "type": "object",
      "description": "Represents an uploaded document.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Reference to the User this document belongs to."
        },
        "incomeId": {
          "type": "string",
          "description": "Reference to an associated Income entry."
        },
        "expenseId": {
          "type": "string",
          "description": "Reference to an associated Expense entry."
        },
        "fileName": {
          "type": "string",
          "description": "The name of the uploaded file."
        },
        "fileUrl": {
          "type": "string",
          "description": "The URL to access the file in storage."
        },
        "uploadedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the document was uploaded."
        },
        "documentType": {
          "type": "string",
          "description": "The type of document (e.g., Receipt, Invoice, W-2)."
        },
        "description": {
          "type": "string",
          "description": "A description of the document."
        }
      },
      "required": [
        "userId",
        "fileName",
        "fileUrl",
        "uploadedAt"
      ]
    },
     "PanchayatSettings": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PanchayatSettings",
      "type": "object",
      "description": "Stores global settings for the panchayat.",
      "properties": {
        "panchayatName": {
          "type": "string",
          "description": "Name of the Panchayat."
        },
        "district": {
          "type": "string",
          "description": "District name."
        },
        "state": {
          "type": "string",
          "description": "State name."
        },
        "pinCode": {
          "type": "string",
          "description": "PIN code."
        },
        "propertyTaxRate": {
          "type": "number",
          "description": "The general property tax rate as a percentage."
        },
        "waterTaxRate": {
          "type": "number",
          "description": "The water tax rate as a flat amount or percentage."
        },
        "lateFee": {
          "type": "number",
          "description": "The late fee penalty as a percentage."
        }
      },
      "required": ["panchayatName"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile information. The document ID is the Firebase Auth UID."
        }
      },
      {
        "path": "/panchayat-settings/config",
        "definition": {
            "entityName": "PanchayatSettings",
            "schema": {
                "$ref": "#/entities/PanchayatSettings"
            },
            "description": "Singleton document to store global panchayat settings."
        }
      },
      {
        "path": "/users/{userId}/taxYears/{taxYearId}",
        "definition": {
          "entityName": "TaxYear",
          "schema": {
            "$ref": "#/entities/TaxYear"
          },
          "description": "Stores tax years for a specific user."
        }
      },
      {
        "path": "/users/{userId}/taxYears/{taxYearId}/incomes/{incomeId}",
        "definition": {
          "entityName": "Income",
          "schema": {
            "$ref": "#/entities/Income"
          },
          "description": "Stores income records for a specific tax year."
        }
      },
      {
        "path": "/users/{userId}/taxYears/{taxYearId}/expenses/{expenseId}",
        "definition": {
          "entityName": "Expense",
          "schema": {
            "$ref": "#/entities/Expense"
          },
          "description": "Stores expense records for a specific tax year."
        }
      },
      {
        "path": "/users/{userId}/documents/{documentId}",
        "definition": {
          "entityName": "Document",
          "schema": {
            "$ref": "#/entities/Document"
          },
          "description": "Stores document metadata for a specific user."
        }
      }
    ]
  }
}
